    "def parse_articles(articles): # takes in response to NYT api and parses articles into list of dicts\n",
    "    news = []\n",
    "    for i in articles['response']['docs']:\n",
    "        dic = {}\n",
    "        dic['url'] = i['web_url'] \n",
    "        news.append(dic)\n",
    "    return(news) "
